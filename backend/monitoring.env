# 监控系统配置示例
# 复制此文件为 monitoring.env 并根据实际情况修改配置

# 基础监控配置
MONITORING_HEALTH_CHECK_INTERVAL=60
MONITORING_METRICS_COLLECTION_INTERVAL=60
MONITORING_ALERT_CHECK_INTERVAL=60
MONITORING_ALERT_COOLDOWN_MINUTES=60
MONITORING_METRICS_RETENTION_DAYS=30

# 系统阈值配置
MONITORING_CPU_WARNING_THRESHOLD=80.0
MONITORING_CPU_CRITICAL_THRESHOLD=90.0
MONITORING_MEMORY_WARNING_THRESHOLD=85.0
MONITORING_MEMORY_CRITICAL_THRESHOLD=95.0
MONITORING_DISK_WARNING_THRESHOLD=90.0
MONITORING_DISK_CRITICAL_THRESHOLD=95.0

# API性能阈值
MONITORING_API_RESPONSE_TIME_WARNING=1000.0
MONITORING_API_RESPONSE_TIME_CRITICAL=5000.0
MONITORING_API_ERROR_RATE_WARNING=0.1
MONITORING_API_ERROR_RATE_CRITICAL=0.2

# 数据库性能阈值
MONITORING_DB_QUERY_TIME_WARNING=500.0
MONITORING_DB_QUERY_TIME_CRITICAL=2000.0
MONITORING_DB_CONNECTION_WARNING=50
MONITORING_DB_CONNECTION_CRITICAL=80

# 交易告警阈值
MONITORING_LARGE_LOSS_THRESHOLD=0.02
MONITORING_UNUSUAL_VOLUME_MULTIPLIER=3.0

# 邮件通知配置
MONITORING_EMAIL_ENABLED=false
MONITORING_EMAIL_SMTP_SERVER=smtp.gmail.com
MONITORING_EMAIL_SMTP_PORT=587
MONITORING_EMAIL_USERNAME=your-email@gmail.com
MONITORING_EMAIL_PASSWORD=your-app-password
MONITORING_EMAIL_FROM=trading-robot@example.com
MONITORING_EMAIL_TO=["admin@example.com", "ops@example.com"]

# Slack通知配置
MONITORING_SLACK_ENABLED=false
MONITORING_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
MONITORING_SLACK_CHANNEL=#alerts

# Telegram通知配置
MONITORING_TELEGRAM_ENABLED=false
MONITORING_TELEGRAM_BOT_TOKEN=your-bot-token
MONITORING_TELEGRAM_CHAT_ID=your-chat-id

# Webhook通知配置
MONITORING_WEBHOOK_ENABLED=false
MONITORING_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Celery配置（用于后台任务）
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1
